{% block save %}
    <!-- Large modal -->
    <div class="modal fade bs-save-modal-lg" tabindex="-1" role="dialog" id="saveModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">{{ 'save.title'|trans }}</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <p class="text-justify">{{ 'save.core' | trans }}</p>
                    <p class="text-justify">{{ 'save.code' | trans }}</p>
                    <form class="form-horizontal" onsubmit="return false">
                        <div class="form-group">
                            <label for="gameId" class="col-sm-2 control-label">{{ 'save.key' | trans }}</label>
                            <div class="col-sm-10"><input type="text" id="gameId" name="gameId" class="form-control" value="{{ game.id }}"></div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default clipboard" id="saveCopy" data-clipboard-action="copy" data-clipboard-target="#gameId"><i class="fa fa-copy"></i>&nbsp;{{ 'btn.copy'|trans }}</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-close"></i>&nbsp;{{ 'btn.close'|trans }}</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
{% endblock %}
