{% extends 'AppBundle::base.html.twig' %}
{% block background %}{% endblock %}
{% block loader %}{% include 'AppBundle::loader.html.twig' %}{% endblock %}
{% block header %}{% include 'AppBundle:game:header.html.twig' %}{% endblock %}
{% block container %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-11 col-xs-12">
                <div class="container d-flex align-items-center" id="container">
                    {% block body %}
                        {% block content %}{% endblock %}
                        {% include 'AppBundle:game:save.html.twig' %}
                    {% endblock %}
                </div>
            </div>
            <div class="col-md-1 col-xs-12">
                <aside id="achievements" class="d-flex align-items-center">
                    {% include 'AppBundle:game:footer.html.twig' %}
                </aside>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Simdate tools -->
    <script id="dawn-js" src="{{ asset('js/dawn.js') }}"></script>
{% endblock %}
{% block script %}<script id="activation">
    var translate = [
        'txt.zoom', '{{ 'txt.zoom' | trans }}'
    ];

    var rootPath  = '{{ relative_path('/') }}';

    new Clipboard('.clipboard');
</script>{% endblock %}
