{% extends 'AppBundle::base.html.twig' %}
{% block background %}{% endblock %}
{% block loader %}{% include 'AppBundle::loader.html.twig' %}{% endblock %}
{% block header %}{% include 'AppBundle:game:header.html.twig' %}{% endblock %}
{% block container %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-11 col-xs-12">
                <div class="container d-flex align-items-center" id="container">
                    {% block body %}
                        {% block content %}{% endblock %}
                        {% include 'AppBundle:game:save.html.twig' %}
                    {% endblock %}
                </div>
            </div>
            <div class="col-md-1 col-xs-12">
                <aside id="achievements" class="d-flex align-items-center">
                    {% include 'AppBundle:game:footer.html.twig' %}
                </aside>
            </div>
        </div>
    </div>
    <!-- Game Over Modal -->
    <div class="modal fade" id="gameOverModal" tabindex="-1" role="dialog" aria-labelledby="gameOverModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="gameOverModalLabel">{{ 'txt.game-over' | trans }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="text-center">{{ 'txt.game-over.explanation' | trans }}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        <i class="fa fa-times"></i>&nbsp;{{ 'btn.close' | trans }}
                    </button>
                    <a href="{{ path('new-game') }}" class="btn btn-secondary" title="">
                        <i class="fa fa-refresh"></i>&nbsp;{{ 'btn.restart' }}
                    </a>
                    <a href="{{ path('homepage') }}" class="btn btn-primary" title="">
                        <i class="fa fa-home"></i>&nbsp;{{ 'nav.home' | trans}}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Simdate tools -->
    <script id="dawn-js" src="{{ asset('js/dawn.js') }}"></script>
{% endblock %}
{% block script %}<script id="activation">
    var translate = [
        'txt.zoom', '{{ 'txt.zoom' | trans }}'
    ];

    var rootPath  = '{{ relative_path('/') }}';

    new Clipboard('.clipboard');
</script>{% endblock %}
